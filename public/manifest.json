{
  "name": "HelpDesk MAR",
  "description": "This extension is made to improve work of helpdesks technicians",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://pokeapi.co/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "pressButton" : {
      "suggested_key" : "Ctrl+Shift+Y",
      "description" : "This extension is made to improve work of helpdesks technicians"
    }
  },
  "action": {},
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css",
        "contentScript.css",
        "iframe.css",
        "side_extension.html",
        "shortcutComponent.html",
        "images/search_icon_png.png",
        "images/search_icon.svg",
        "images/down-arrow-key.png",
        "images/home.png",
        "images/up-arrow-key.png",
        "images/left-arrow-key.png",
        "images/right-arrow-key.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}